@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <h2 class="text-primary">Course List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Course" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Course
                </a>
        </div>
    </div>
    <br/>
<table class="table table-bordered table-striped" style="width:100%">
<thead> 
    <tr>
        <th>
            Course Name
        </th>
        <th>
            Course Description
        </th>
        <th></th>
    </tr>
</thead>
<tbody> 
    @foreach (var item in Model)
    {
        <tr>
            <td width="50%">
                @item.Name
            </td>
                <td width="30%">
                    @item.Description
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Course" asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i>  Edit</a>&nbsp;
                            <a asp-area="Admin" asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash3"></i>  Delete</a>
                    </div>
                </td>
        </tr>
    }
</tbody>
</table>
</div>